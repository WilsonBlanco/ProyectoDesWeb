{% extends 'layout/base.html.twig' %}

{% block title %}Alumnos - Sistema Escolar{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Lista de Alumnos</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_alumno_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Alumno
        </a>
    </div>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Foto</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Fecha Nacimiento</th>
                <th>Carrera</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for alumno in alumnos %}
            <tr>
                <td>{{ alumno.id }}</td>
                <td>
                    {% if alumno.fotografia %}
                        <img src="{{ asset('uploads/fotos_alumnos/' ~ alumno.fotografia) }}" 
                             alt="Foto" class="rounded-circle" width="40" height="40">
                    {% else %}
                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" 
                             style="width: 40px; height: 40px;">
                            <i class="bi bi-person text-white"></i>
                        </div>
                    {% endif %}
                </td>
                <td>{{ alumno.nombres }}</td>
                <td>{{ alumno.apellidos }}</td>
                <td>{{ alumno.fechaNacimiento ? alumno.fechaNacimiento|date('d/m/Y') : '' }}</td>
                <td>{{ alumno.carrera ? alumno.carrera.nombre : 'Sin carrera' }}</td>
                <td class="table-actions">
                    <a href="{{ path('app_alumno_show', {'id': alumno.id}) }}" class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('app_alumno_edit', {'id': alumno.id}) }}" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    {{ include('alumno/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">No se encontraron alumnos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}