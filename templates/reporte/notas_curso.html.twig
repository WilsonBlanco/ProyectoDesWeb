{% extends 'layout/base.html.twig' %}

{% block title %}Reporte: Notas por Curso - Sistema Escolar{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Reporte: Notas por Curso</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_reporte_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Filtros del Reporte</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="carrera_id" class="form-label">Carrera</label>
                <select name="carrera_id" id="carrera_id" class="form-control" required>
                    <option value="">Seleccione carrera</option>
                    {% for carrera in carreras %}
                        <option value="{{ carrera.id }}" {% if carreraSeleccionada and carrera.id == carreraSeleccionada.id %}selected{% endif %}>
                            {{ carrera.nombre }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="semestre_id" class="form-label">Semestre</label>
                <select name="semestre_id" id="semestre_id" class="form-control" required>
                    <option value="">Seleccione semestre</option>
                    {% for semestre in semestres %}
                        <option value="{{ semestre.id }}" {% if semestreSeleccionado and semestre.id == semestreSeleccionado.id %}selected{% endif %}>
                            {{ semestre.nombre }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="curso_id" class="form-label">Curso</label>
                <select name="curso_id" id="curso_id" class="form-control" required>
                    <option value="">Seleccione curso</option>
                    {% for curso in cursos %}
                        <option value="{{ curso.id }}" {% if cursoSeleccionado and curso.id == cursoSeleccionado.id %}selected{% endif %}>
                            {{ curso.nombre }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="seccion_id" class="form-label">Secci贸n</label>
                <select name="seccion_id" id="seccion_id" class="form-control" required>
                    <option value="">Seleccione secci贸n</option>
                    {% for seccion in secciones %}
                        <option value="{{ seccion.id }}" {% if seccionSeleccionada and seccion.id == seccionSeleccionada.id %}selected{% endif %}>
                            {{ seccion.nombre }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary me-2">Generar Reporte</button>
                {% if carreraSeleccionada and cursoSeleccionado and seccionSeleccionada and semestreSeleccionado %}
                    <div class="btn-group">
                        <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download"></i> Exportar
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="{{ path('app_reporte_notas_curso', {
                                    'carrera_id': carreraSeleccionada.id,
                                    'curso_id': cursoSeleccionado.id,
                                    'seccion_id': seccionSeleccionada.id,
                                    'semestre_id': semestreSeleccionado.id,
                                    'formato': 'pdf'
                                }) }}">
                                    <i class="bi bi-file-pdf"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_reporte_notas_curso', {
                                    'carrera_id': carreraSeleccionada.id,
                                    'curso_id': cursoSeleccionado.id,
                                    'seccion_id': seccionSeleccionada.id,
                                    'semestre_id': semestreSeleccionado.id,
                                    'formato': 'excel'
                                }) }}">
                                    <i class="bi bi-file-spreadsheet"></i> Excel
                                </a>
                            </li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </form>
    </div>
</div>

{% if carreraSeleccionada and cursoSeleccionado and seccionSeleccionada and semestreSeleccionado %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            Notas de: {{ cursoSeleccionado.nombre }}
            <small class="text-muted"> - {{ carreraSeleccionada.nombre }} - Secci贸n {{ seccionSeleccionada.nombre }} - {{ semestreSeleccionado.nombre }}</small>
            <span class="badge bg-primary ms-2">{{ notas|length }} registros</span>
        </h5>
        <div>
            <span class="text-muted">Generado: {{ "now"|date('d/m/Y H:i') }}</span>
        </div>
    </div>
    <div class="card-body">
        {% if notas|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Alumno</th>
                        <th>Nota</th>
                        <th>Estado</th>
                        <th>Fecha Registro</th>
                    </tr>
                </thead>
                <tbody>
                    {% for nota in notas %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>
                            <strong>{{ nota.alumno.apellidos }}, {{ nota.alumno.nombres }}</strong>
                            <br>
                            <small class="text-muted">{{ nota.alumno.carrera.nombre }}</small>
                        </td>
                        <td>
                            <span class="badge {% if nota.aprobado %}bg-success{% else %}bg-danger{% endif %} fs-6">
                                {{ nota.calificacion }}
                            </span>
                        </td>
                        <td>
                            {% if nota.aprobado %}
                                <span class="badge bg-success">Aprobado</span>
                            {% else %}
                                <span class="badge bg-danger">Reprobado</span>
                            {% endif %}
                        </td>
                        <td>{{ nota.fechaRegistro|date('d/m/Y H:i') }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ notas|length }}</h5>
                        <p class="card-text">Total Alumnos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ notas|filter(n => n.aprobado)|length }}</h5>
                        <p class="card-text">Aprobados</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ notas|filter(n => not n.aprobado)|length }}</h5>
                        <p class="card-text">Reprobados</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">
                            {% set totalNotas = notas|length %}
                            {% set aprobados = notas|filter(n => n.aprobado)|length %}
                            {% if totalNotas > 0 %}
                                {{ ((aprobados / totalNotas) * 100)|number_format(1) }}%
                            {% else %}
                                0%
                            {% endif %}
                        </h5>
                        <p class="card-text">Porcentaje Aprobaci贸n</p>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No se encontraron notas para los filtros seleccionados.
        </div>
        {% endif %}
    </div>
</div>
{% endif %}
{% endblock %}