{% extends 'layout/base.html.twig' %}

{% block title %}Reportes - Sistema Escolar{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Módulo de Reportes</h1>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-people display-4 text-primary"></i>
                </div>
                <h5 class="card-title">Alumnos por Carrera</h5>
                <p class="card-text">Listado general de alumnos agrupados por carrera.</p>
                <a href="{{ path('app_reporte_alumnos_carrera') }}" class="btn btn-primary">
                    Generar Reporte
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-journal-text display-4 text-success"></i>
                </div>
                <h5 class="card-title">Notas por Curso</h5>
                <p class="card-text">Reporte de notas filtrado por carrera, curso y sección.</p>
                <a href="{{ path('app_reporte_notas_curso') }}" class="btn btn-success">
                    Generar Reporte
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-person-badge display-4 text-info"></i>
                </div>
                <h5 class="card-title">Consulta de Alumno</h5>
                <p class="card-text">Información completa del alumno e historial de notas.</p>
                <a href="{{ path('app_reporte_consulta_alumno') }}" class="btn btn-info">
                    Consultar
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Características de los Reportes</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Formatos de Exportación:</h6>
                        <ul>
                            <li><strong>PDF:</strong> Ideal para impresión y distribución</li>
                            <li><strong>Excel:</strong> Para análisis y procesamiento de datos</li>
                            <li><strong>HTML:</strong> Vista en pantalla</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Filtros Disponibles:</h6>
                        <ul>
                            <li>Por Carrera</li>
                            <li>Por Curso</li>
                            <li>Por Sección</li>
                            <li>Por Semestre</li>
                            <li>Por Alumno específico</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}