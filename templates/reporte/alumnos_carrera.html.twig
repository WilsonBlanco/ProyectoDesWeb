{% extends 'layout/base.html.twig' %}

{% block title %}Reporte: Alumnos por Carrera - Sistema Escolar{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Reporte: Alumnos por Carrera</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_reporte_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Filtros del Reporte</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <label for="carrera_id" class="form-label">Seleccionar Carrera</label>
                <select name="carrera_id" id="carrera_id" class="form-control" required>
                    <option value="">Seleccione una carrera</option>
                    {% for carrera in carreras %}
                        <option value="{{ carrera.id }}" {% if carreraSeleccionada and carrera.id == carreraSeleccionada.id %}selected{% endif %}>
                            {{ carrera.nombre }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Generar Reporte</button>
                {% if carreraSeleccionada %}
                    <div class="btn-group">
                        <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download"></i> Exportar
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="{{ path('app_reporte_alumnos_carrera', {'carrera_id': carreraSeleccionada.id, 'formato': 'pdf'}) }}">
                                    <i class="bi bi-file-pdf"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_reporte_alumnos_carrera', {'carrera_id': carreraSeleccionada.id, 'formato': 'excel'}) }}">
                                    <i class="bi bi-file-spreadsheet"></i> Excel
                                </a>
                            </li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </form>
    </div>
</div>

{% if carreraSeleccionada %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            Alumnos de: {{ carreraSeleccionada.nombre }}
            <span class="badge bg-primary ms-2">{{ alumnos|length }} alumnos</span>
        </h5>
        <div>
            <span class="text-muted">Generado: {{ "now"|date('d/m/Y H:i') }}</span>
        </div>
    </div>
    <div class="card-body">
        {% if alumnos|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Foto</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Fecha Nacimiento</th>
                        <th>Edad</th>
                        <th>Carrera</th>
                    </tr>
                </thead>
                <tbody>
                    {% for alumno in alumnos %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>
                            {% if alumno.fotografia %}
                                <img src="{{ asset('uploads/fotos_alumnos/' ~ alumno.fotografia) }}" 
                                     alt="Foto" class="rounded-circle" width="40" height="40">
                            {% else %}
                                <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" 
                                     style="width: 40px; height: 40px;">
                                    <i class="bi bi-person text-white"></i>
                                </div>
                            {% endif %}
                        </td>
                        <td>{{ alumno.nombres }}</td>
                        <td>{{ alumno.apellidos }}</td>
                        <td>{{ alumno.fechaNacimiento ? alumno.fechaNacimiento|date('d/m/Y') : '' }}</td>
                        <td>
                            {% if alumno.fechaNacimiento %}
                                {{ date().diff(date(alumno.fechaNacimiento)).y }} a√±os
                            {% endif %}
                        </td>
                        <td>{{ alumno.carrera.nombre }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No se encontraron alumnos para la carrera seleccionada.
        </div>
        {% endif %}
    </div>
</div>
{% endif %}
{% endblock %}