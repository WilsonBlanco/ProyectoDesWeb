{% extends 'layout/base.html.twig' %}

{% block title %}Inscripción Múltiple - Sistema Escolar{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Inscripción Múltiple</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_inscripcion_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Inscripción Múltiple de Alumnos</h5>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.carrera) }}
                    {{ form_widget(form.carrera) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.semestre) }}
                    {{ form_widget(form.semestre) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.alumnos) }}
                    {{ form_widget(form.alumnos) }}
                    <small class="form-text text-muted">Mantenga presionada la tecla Ctrl para seleccionar múltiples alumnos</small>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.cursoSeccion) }}
                    {{ form_widget(form.cursoSeccion) }}
                    <small class="form-text text-muted">Seleccione el curso y sección para inscribir a los alumnos</small>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Inscribir Alumnos Seleccionados</button>
        {{ form_end(form) }}
    </div>
</div>

<div class="mt-4">
    <div class="card">
        <div class="card-header">
            <h6 class="card-title mb-0">Información de Carreras y Semestres Disponibles</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Carreras:</h6>
                    <ul>
                        {% for carrera in carreras %}
                            <li>{{ carrera.nombre }}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6>Semestres:</h6>
                    <ul>
                        {% for semestre in semestres %}
                            <li>{{ semestre.nombre }} {% if semestre.activo %}<span class="badge bg-success">Activo</span>{% endif %}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const carreraSelect = document.getElementById('{{ form.carrera.vars.id }}');
    const semestreSelect = document.getElementById('{{ form.semestre.vars.id }}');
    const alumnosSelect = document.getElementById('{{ form.alumnos.vars.id }}');
    const cursoSeccionSelect = document.getElementById('{{ form.cursoSeccion.vars.id }}');

    // Función para actualizar el formulario cuando cambia carrera o semestre
    function actualizarFormulario() {
        if (carreraSelect.value && semestreSelect.value) {
            // Disparar evento de cambio para actualizar los campos dinámicos
            const event = new Event('change', { bubbles: true });
            carreraSelect.dispatchEvent(event);
            semestreSelect.dispatchEvent(event);
        }
    }

    if (carreraSelect) {
        carreraSelect.addEventListener('change', actualizarFormulario);
    }
    
    if (semestreSelect) {
        semestreSelect.addEventListener('change', actualizarFormulario);
    }
});
</script>
{% endblock %}