{% extends 'layout/base.html.twig' %}

{% block title %}Semestre index{% endblock %}

{% block body %}
    <h1>Semestre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>FechaInicio</th>
                <th>FechaFin</th>
                <th>Activo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for semestre in semestres %}
            <tr>
                <td>{{ semestre.id }}</td>
                <td>{{ semestre.nombre }}</td>
                <td>{{ semestre.fechaInicio ? semestre.fechaInicio|date('Y-m-d') : '' }}</td>
                <td>{{ semestre.fechaFin ? semestre.fechaFin|date('Y-m-d') : '' }}</td>
                <td>{{ semestre.activo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_semestre_show', {'id': semestre.id}) }}">show</a>
                    <a href="{{ path('app_semestre_edit', {'id': semestre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_semestre_new') }}">Create new</a>
{% endblock %}
