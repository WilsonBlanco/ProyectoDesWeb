{% extends 'layout/base.html.twig' %}

{% block title %}Detalle de Sección Habilitada - Sistema Escolar{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Detalle de Sección Habilitada</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_curso_seccion_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ curso_seccion.id }}</td>
                </tr>
                <tr>
                    <th>Curso</th>
                    <td>{{ curso_seccion.cursoCarreraSemestre.curso.nombre }}</td>
                </tr>
                <tr>
                    <th>Carrera</th>
                    <td>{{ curso_seccion.cursoCarreraSemestre.carrera.nombre }}</td>
                </tr>
                <tr>
                    <th>Semestre</th>
                    <td>{{ curso_seccion.cursoCarreraSemestre.semestre.nombre }}</td>
                </tr>
                <tr>
                    <th>Sección</th>
                    <td>{{ curso_seccion.seccion.nombre }}</td>
                </tr>
                <tr>
                    <th>Descripción Sección</th>
                    <td>{{ curso_seccion.seccion.descripcion ?: 'Sin descripción' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a href="{{ path('app_curso_seccion_edit', {'id': curso_seccion.id}) }}" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Editar
    </a>
    {{ include('curso_seccion/_delete_form.html.twig') }}
</div>

<!-- Información de Inscripciones -->
<div class="card mt-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Alumnos Inscritos en esta Sección</h5>
    </div>
    <div class="card-body">
        {% if curso_seccion.inscripciones|length > 0 %}
            <div class="table-responsive">
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Alumno</th>
                            <th>Fecha Inscripción</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for inscripcion in curso_seccion.inscripciones %}
                            <tr>
                                <td>{{ inscripcion.alumno.nombreCompleto }}</td>
                                <td>{{ inscripcion.fechaInscripcion|date('d/m/Y H:i') }}</td>
                                <td>
                                    {% if inscripcion.activo %}
                                        <span class="badge bg-success">Activo</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactivo</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No hay alumnos inscritos en esta sección.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}