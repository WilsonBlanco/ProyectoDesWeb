{% extends 'layout/base.html.twig' %}

{% block title %}Curso Carrera Semestre - Sistema Escolar{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Asignaciones de Cursos a Carreras y Semestres</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_curso_carrera_semestre_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Asignaci√≥n
        </a>
    </div>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Carrera</th>
                <th>Semestre</th>
                <th>Curso</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for curso_carrera_semestre in curso_carrera_semestres %}
            <tr>
                <td>{{ curso_carrera_semestre.id }}</td>
                <td>{{ curso_carrera_semestre.carrera.nombre }}</td>
                <td>{{ curso_carrera_semestre.semestre.nombre }}</td>
                <td>{{ curso_carrera_semestre.curso.nombre }}</td>
                <td class="table-actions">
                    <a href="{{ path('app_curso_carrera_semestre_show', {'id': curso_carrera_semestre.id}) }}" class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('app_curso_carrera_semestre_edit', {'id': curso_carrera_semestre.id}) }}" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    {{ include('curso_carrera_semestre/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No se encontraron asignaciones</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}