{% extends 'layout/base.html.twig' %}

{% block title %}Carreras - Sistema Escolar{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Lista de Carreras</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_carrera_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Carrera
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for carrera in carreras %}
            <tr>
                <td>{{ carrera.id }}</td>
                <td>{{ carrera.nombre }}</td>
                <td>{{ carrera.descripcion }}</td>
                <td class="table-actions">
                    <a href="{{ path('app_carrera_show', {'id': carrera.id}) }}" class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('app_carrera_edit', {'id': carrera.id}) }}" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    {{ include('carrera/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">No se encontraron carreras</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}