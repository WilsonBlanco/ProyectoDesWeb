{% extends 'layout/base.html.twig' %}

{% block title %}Asignar Cursos a Carrera y Semestre - Sistema Escolar{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Asignar Cursos a Carrera y Semestre</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_asignacion_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Nueva Asignación</h5>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.carrera) }}
                    {{ form_widget(form.carrera) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.semestre) }}
                    {{ form_widget(form.semestre) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.curso) }}
                    {{ form_widget(form.curso) }}
                </div>
                <button type="submit" class="btn btn-primary">Asignar Curso</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Asignaciones Existentes</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <th>Carrera</th>
                                <th>Semestre</th>
                                <th>Curso</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for asignacion in asignaciones %}
                                <tr>
                                    <td>{{ asignacion.carrera.nombre }}</td>
                                    <td>{{ asignacion.semestre.nombre }}</td>
                                    <td>{{ asignacion.curso.nombre }}</td>
                                    <td>
                                        <form method="post" action="{{ path('app_curso_carrera_semestre_delete', {'id': asignacion.id}) }}" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ asignacion.id) }}">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Está seguro?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">No hay asignaciones</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}